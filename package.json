{
  "name": "vtrqxtrading_app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",

    /* --- NEWS ENGINE --- */
    "news:refresh": "tsx scripts/news/refresh.ts --stage=all",
    "news:reset-cache": "tsx scripts/news/resetCache.ts",

    /* --- DATA FETCHING / CRON --- */
    "update:data": "tsx scripts/update/fetchData.ts",
    "cron:update:data": "node -e \"setInterval(() => require('child_process').exec('pnpm run update:data'), 3600000)\"",

    /* Prisma */
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@auth/core": "0.41.0",
    "@auth/prisma-adapter": "2.11.0",
    "@prisma/client": "6.17.1",
    "ai": "3.4.9",
    "clsx": "2.1.1",
    "date-fns": "3.6.0",
    "date-fns-tz": "2.0.0",
    "fuse.js": "7.0.0",
    "jsdom": "24.0.0",
    "next": "15.5.5",
    "next-auth": "4.24.11",
    "node-fetch": "3.3.2",
    "openai": "4.58.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/node": "22.7.5",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.20",
    "eslint": "9.10.0",
    "eslint-config-next": "15.5.5",
    "postcss": "8.4.49",
    "prisma": "6.17.1",
    "tailwindcss": "3.4.13",
    "tsx": "4.19.2",
    "typescript": "5.9.3"
  }
}
