{
  "name": "vtrqxtrading_app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "update:data": "ts-node src/lib/fetchData.ts",
    "cron:update:data": "node -e \"const { exec } = require('child_process'); const run = () => exec('npm run update:data', {stdio: 'inherit'}); run(); setInterval(run, 3600000);\"",
    "news:refresh": "tsx scripts/news/refresh.ts --stage=all && tsx scripts/news/enrichWithAI.ts",
    "cron:news:refresh": "node -e \"const { exec } = require('child_process'); const run = () => exec('npm run news:refresh', {stdio: 'inherit'}); run(); setInterval(run, 3600000);\"",
    "postinstall": "prisma generate",
    "sentiment:refresh": "tsx scripts/sentiment/refresh.ts",
    "cron:sentiment:refresh": "node -e \"const { exec } = require('child_process'); const run = () => exec('npm run sentiment:refresh', {stdio: 'inherit'}); run(); setInterval(run, 3600000);\""
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@prisma/client": "^6.17.1",
    "@upstash/redis": "^1.35.6",
    "bcryptjs": "^3.0.2",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^2.0.0",
    "framer-motion": "^12.23.24",
    "fuse.js": "^7.0.0",
    "jsdom": "^24.0.0",
    "next": "15.5.5",
    "next-auth": "^4.24.11",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "openai": "^4.58.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "stripe": "^19.1.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.15",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-config-next": "15.5.5",
    "postcss": "^8.4.49",
    "prisma": "^6.17.1",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
